<h2>Edición pelis</h2>

<form method="post" action="/movies/{{_id}}/edit">
    <div class="form-group">
        <label for="title">Título</label>
        <input name="title" type="text" value="{{title}}" class="form-control" id="title" aria-describedby="name"
            placeholder="Introduce un título">
    </div>

    <div class="form-group">
        <label for="genre">Género</label>
        <input name="genre" type="text" value="{{genre}}" class="form-control" id="genre" aria-describedby="genre"
            placeholder="Introduce su género">
    </div>

    <div class="form-group">
        <label for="plot">Sinopsis</label>
        <input name="plot" type="text" value="{{plot}}" class="form-control" id="plot" aria-describedby="plot"
            placeholder="Introduce su sinopsis">
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>

    <a class="btn btn-dark" href="/movies/index">Volver</a>
</form>